        <DataGrid Name="GResult" AutoGeneratingColumn="GResult_AutoGeneratingColumn" Margin="31,130,25,22" SelectionChanged="Selected_GridView"/>
        <Button Content="Tìm" HorizontalAlignment="Left" Height="31" Margin="542,64,0,0" VerticalAlignment="Top" Width="106" Click="Find"/>
        <Button Name="edit" Content="Sửa" HorizontalAlignment="Left" Height="31" Margin="669,64,0,0" VerticalAlignment="Top" Width="88" Click="Edit"/>

    </Grid>
</Window>
